@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
   <meta name="viewport" content="width=device-width" />
   <title>Responses</title>
</head>
<body>
   <h2> Guest List</h2>
   <table>  <!--Print a list of guests-->
      <thead>
         <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
         </tr>
      </thead>
      <tbody>
         @foreach (PartyInvites.Models.GuestResponse r in Model)
         {
            <tr>
               <td>@r.FirstName</td>
               <td>@r.LastName</td>
               <td>@r.Email</td>
               <td>@r.Phone</td>
            </tr>
         }
      </tbody>
   </table>
</body>
</html>
