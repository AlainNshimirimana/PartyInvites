@model PartyInvites.Models.GuestResponse;
@{
   Layout = null;
}

<!DOCTYPE html>

<html>
<head>
   <meta name="viewport" content="width=device-width" />
   <title>Thanks</title>
</head>
<body>
   <p>
      <h1>Thank you, @Model.FirstName!</h1>
      @if (Model.WillAttend == true)
      {
         @:It's great you're coming. The drinks are already in the fridge!
      }
      else
      {
         @:Sorry to hear you can't make it , but thanks for letting us know.
      }
   </p>
   <p>Click <a asp-action="ListResponses">here</a> to see who is coming</p> 
</body>
</html>
